# Production Environment Configuration
NODE_ENV=production
PORT=5000

# Database Configuration
DB_PATH=./data/finautojobs.db

# JWT Configuration - CHANGE THESE IN PRODUCTION
JWT_SECRET=your-super-secure-256-bit-secret-key-change-this-in-production
JWT_EXPIRES_IN=24h
REFRESH_TOKEN_EXPIRES_IN=7d

# Session Configuration
SESSION_SECRET=your-super-secure-session-secret-change-this-in-production

# Frontend URL
FRONTEND_URL=https://your-production-domain.com

# CORS Configuration
CORS_ORIGIN=https://your-production-domain.com

# Rate Limiting
API_RATE_LIMIT_WINDOW_MS=900000
API_RATE_LIMIT_MAX_REQUESTS=100
AUTH_RATE_LIMIT_MAX_REQUESTS=5

# Email Configuration (for OTP and notifications)
EMAIL_SERVICE=gmail
EMAIL_USER=your-email@gmail.com
EMAIL_PASS=your-app-password

# SMS Configuration (for OTP)
SMS_SERVICE=twilio
SMS_ACCOUNT_SID=your-twilio-account-sid
SMS_AUTH_TOKEN=your-twilio-auth-token
SMS_PHONE_NUMBER=your-twilio-phone-number

# File Upload Configuration
MAX_FILE_SIZE=5242880
ALLOWED_FILE_TYPES=image/jpeg,image/png,application/pdf
UPLOAD_PATH=./uploads

# Logging Configuration
LOG_LEVEL=info
LOG_FILE=./logs/app.log

# Security Configuration
BCRYPT_ROUNDS=12
PASSWORD_MIN_LENGTH=8
SESSION_TIMEOUT=1800000

# Database Backup Configuration
BACKUP_ENABLED=true
BACKUP_INTERVAL=86400000
BACKUP_RETENTION_DAYS=30