# Database Configuration
DATABASE_URL=./data/finautojobs.db

# Server Configuration
PORT=5000
NODE_ENV=production

# Session Configuration
SESSION_SECRET=your-super-secret-session-key-change-this-in-production-use-a-long-random-string

# JWT Configuration
JWT_SECRET=your-jwt-secret-key-change-this-in-production-use-a-long-random-string
JWT_EXPIRES_IN=24h

# Email Configuration (for notifications)
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USER=your-email@gmail.com
EMAIL_PASS=your-app-password

# File Upload Configuration
UPLOAD_PATH=./uploads
MAX_FILE_SIZE=10485760

# CORS Origins
CORS_ORIGINS=https://yourdomain.com,https://www.yourdomain.com

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# WebSocket Configuration
WEBSOCKET_ENABLED=true

# Frontend URL
FRONTEND_URL=https://yourdomain.com

# Security Settings
BCRYPT_ROUNDS=12

# Analytics and Monitoring
ENABLE_ANALYTICS=true
LOG_LEVEL=info

# Redis Configuration (for production caching)
REDIS_URL=redis://localhost:6379

# AWS S3 Configuration (for file uploads)
AWS_ACCESS_KEY_ID=your-aws-access-key
AWS_SECRET_ACCESS_KEY=your-aws-secret-key
AWS_REGION=us-east-1
AWS_S3_BUCKET=your-bucket-name

# Database Backup
ENABLE_BACKUPS=true
BACKUP_SCHEDULE=0 2 * * *

# Performance Monitoring
ENABLE_PERFORMANCE_MONITORING=true
SLOW_QUERY_THRESHOLD=1000
